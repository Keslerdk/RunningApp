<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RunningApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.MaterialComponents.TexView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lavender</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.MaterialComponents.TexView.Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lavender</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textColor">@color/lavender</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>